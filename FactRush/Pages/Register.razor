@page "/register"
@inject NavigationManager Navigation

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1 class="text-center mb-4">Inscription</h1>
            <div class="mb-3">
                <label for="playerName" class="form-label">Nom du joueur</label>
                <input type="text" id="playerName" class="form-control" @bind="playerName" placeholder="Entrez votre nom..." />
            </div>
            <div class="d-grid">
                <button class="btn btn-primary" @onclick="StartGame">Lancer le jeu</button>
            </div>
        </div>
    </div>
</div>

@code {
    private string playerName = string.Empty;

    private void StartGame()
    {
        // Ici, vous pouvez ajouter la logique de démarrage du jeu et stocker le nom du joueur dans un service, si nécessaire.
        // Pour l'instant, on redirige vers une page fictive "/game" qui sera développée ultérieurement.
        Navigation.NavigateTo("/game");
    }
}
